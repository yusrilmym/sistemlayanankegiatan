<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorLight"
        android:text="Daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btn_back"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <android.support.v7.widget.CardView
        android:layout_below="@id/btn_back"
        android:background="@color/colorLight"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Create Your Account"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Enter your details"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_upload"
            android:src="@drawable/ic_menu_camera"
            android:clickable="true"
            android:background="@color/graydark"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ly_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Name"
            android:nextFocusDown="@id/lay_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                android:drawablePadding="20dp"
                android:drawableTint="@color/colorPrimary"
                android:id="@+id/re_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Username"
            android:nextFocusDown="@id/lay_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="20dp"
                android:drawableTint="@color/colorPrimary"
                android:id="@+id/re_username"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/re_password"
                android:drawableTint="@color/colorPrimary"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_alamat"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Alamat"
            android:nextFocusDown="@id/lay_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:drawableLeft="@drawable/outline_location_on_black_24"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:id="@+id/re_address"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_telp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="No Telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/re_call"
                android:drawableLeft="@drawable/baseline_phone_black_18"
                android:drawablePadding="20dp"
                android:inputType="phone"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
                android:drawablePadding="20dp"
                android:id="@+id/re_email"
                android:inputType="textEmailAddress"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
        <com.dd.CircularProgressButton
            android:layout_marginTop="20dp"
            android:text="SIMPAN"
            android:textColor="@color/colorLight"
            android:id="@+id/btn_save"
            android:background="@color/colorPrimary"
            app:cpb_selectorIdle="@drawable/state_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>